<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Тестовое приложения</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AdminPanel.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <base href="~/" />
</head>
<body>
    <main role="main">
        <div class="d-flex">
            <nav class="left-panel bg-light shadow-sm">
                <div class="list-group list-group-flush">
                    <a href="/" class="list-group-item list-group-item-action"><i class="bi bi-house-door-fill"></i> Главная</a>
                    <a href="/Products" class="list-group-item list-group-item-action"><i class="bi bi-house-door-fill"></i> Товары</a>
                </div>
            </nav>

            <div class="flex-grow-1">
                <header>
                    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm px-3">
                        <div class="container-fluid">
                            <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">@ViewData["PageName"]</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>
                    </nav>
                </header>

                <div class="custom-container">
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        function signout() {
            document.cookie.split(';').forEach(function(cookie) {
                var name = cookie.split('=')[0];
                document.cookie = name + '=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
            });
            window.location.reload();
        }
    </script>
    <div id="ComponentModalGlobal"></div>
</body>
</html>
